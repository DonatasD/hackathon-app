<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Record"
            android:onClick="addRecord"
            android:id="@+id/addRecord" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recordTitle" android:layout_alignBottom="@+id/addRecord" android:layout_alignParentStart="true"
            android:inputType="text"
            android:width="200dp" android:hint="Enter new record title"/>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none" android:layout_below="@+id/addRecord" android:id="@+id/scrollView">
        <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:isScrollContainer="true"
                android:id="@+id/records" android:layout_alignTop="@+id/scrollView" android:layout_alignParentEnd="true">
        </TableLayout>
    </ScrollView>
</RelativeLayout>
